.welcome_statement
  %h1 Items up for sale

.profile_button
  %h2 Sold Items

.product_listing
  %table.product_listing_display
    - Product.where(:user_id => @current_user.id, :is_sold => true).each do |product|
      %tr.product_listing_row
        %td.product_listing_row
          .listing_img
            = link_to image_tag(item.product.image.url, :height => "400", :class => "card-img"), product_path(item.product.id)
          .product_alignment_fields
            %p.listing-text= "Name: " + product.name
            %p.listing-text= "Category: " + product.category
            %p.listing-text= 'Money Made: $' + product.transaction
            %p.listing-text= 'Date Sold: ' + Purchase.where(:product_id => product.id).first.purchase_timestamp
        %td
          .product_listing.right
            %p= link_to "More about #{item.product.name}", product_path(item.product.id), class: "card-button"

.profile_button
  %h2 Items Not Sold Yet

%table#products.table-style
  %thead
    %tr
      %th Product Name
      %th Category
      %th Sale Price
      %th Status
  %tbody
    - Product.where(:user_id => @current_user.id, :is_sold => false).each do |product|
      %tr
        %td= product.name
        %td= product.category
        %td= '$' + product.price
        %td= "Up for sale."
        %td= link_to "View product #{product.name}", product_path(product.id)

.profile_button
  = link_to 'Return to Profile', "/users/#{@current_user[:id]}"